<div class="row">
  <div class="col s6">
    <%= form_for(@question) do |f| %>
      <% if @question.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@question.errors.count, "error") %> found</h2>
          <ul>
          <% @question.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="input-field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="input-field">
        <%= f.label :content %><br>
        <%= f.text_area :content,class: "materialize-textarea" %>
      </div>
      <div class="actions">
        <%= f.button class: "waves-effect waves-light btn ", type: :submit do %>Create<% end %>
      </div>
    <% end %>

  </div>
</div>
